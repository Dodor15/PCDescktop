<Window x:Class="PCDescktop.Spravki.GPUSpravka"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCDescktop.Spravki"
        mc:Ignorable="d"
        Title="GPUSpravka" Height="450" Width="800">
    <Grid>
        <TextBlock>
            <Run>Выбранная вами видеокарта </Run>
            <Run Text="{Binding GPUName}" FontWeight="Bold" FontSize="12"/>
            <Run>Имеет данные характеристики: </Run>
            <LineBreak/>
            <Run Text="{Binding GPUMemoryCount}" FontWeight="Bold" FontSize="12"/>
            <Run> - Количество видеопамяти</Run>
            <LineBreak/>
            <LineBreak/>
            <Run Text="{Binding MemoryType}" FontWeight="Bold" FontSize="12"/>
            <Run> - Тип видеопамяти.</Run>
            <LineBreak/>
            <LineBreak/>
            <Run Text="{Binding bandwidth}" FontWeight="Bold" FontSize="12"/>
            <Run> - Пропускная способность видеокарты.</Run>
        </TextBlock>
    </Grid>
</Window>
