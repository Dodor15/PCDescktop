<Window x:Class="PCDescktop.Spravki.PWSpravka"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCDescktop.Spravki"
        mc:Ignorable="d"
        Title="PWSpravka" Height="450" Width="800">
    <Grid>
        <TextBlock>
            <Run>
                Выбранный вами блок питания
            </Run>
            <Run Text="{Binding PowerUnitName}" FontWeight="Bold" FontSize="12"/>
            <Run>
                Имеет данные характеристики:
            </Run>
            <LineBreak/>
            <Run Text="{Binding Power}"/>
            <Run> - Кол-во ват</Run>
        </TextBlock>
    </Grid>
</Window>
