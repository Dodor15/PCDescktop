<Window x:Class="PCDescktop.Spravki.HDDSpravka"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCDescktop.Spravki"
        mc:Ignorable="d"
        Title="HDDSpravka" Height="450" Width="800">
    <Grid>
        <TextBlock>
            <Run>Выбранный вами накопитель </Run>
            <Run Text="{Binding HDDName}" FontWeight="Bold" FontSize="12"/>
            <Run>Имеет данные характеристики: </Run>
            <LineBreak/>
            <Run Text="{Binding HDDMemoryCount}" FontWeight="Bold" FontSize="12"/>
            <Run> - Кол-во памяти в накопители</Run>
            <LineBreak/>
            <LineBreak/>
            <Run Text="{Binding MemorySpeed}" FontWeight="Bold" FontSize="12"/>
            <Run> Скорость чтения накопителя</Run>
        </TextBlock>
    </Grid>
</Window>
